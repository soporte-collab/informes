rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir leer/escribir SOLO si el usuario está autenticado y accede a sus propios datos
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para el Túnel de Zetti
    match /zetti_queries/{queryId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null;
    }
    
    match /zetti_responses/{responseId} {
      allow read, write, delete: if request.auth != null;
    }

    match /zetti_hourly_sales/{saleId} {
      allow read, write, delete: if request.auth != null;
    }

    match /zetti_metadata/{docId} {
      allow read, write: if request.auth != null;
    }

    // Reglas para el Enriquecimiento de Productos
    match /zetti_enrich_requests/{requestId} {
      allow create, read, update, delete, list: if request.auth != null;
    }
    
    match /zetti_enrich_responses/{responseId} {
      allow read, write, update, delete, list: if request.auth != null;
    }

    match /zetti_products_master/{docId} {
      allow read, write, update, list: if request.auth != null;
    }

    // Reglas para Reparación y Seeding (Nuevos componentes)
    match /zetti_repair_requests/{requestId} {
      allow create, read, update, delete, list: if request.auth != null;
    }
    match /zetti_repair_responses/{responseId} {
      allow read, write, update, delete, list: if request.auth != null;
    }
    match /zetti_seed_requests/{requestId} {
      allow create, read, update, delete, list: if request.auth != null;
    }
    match /zetti_seed_responses/{responseId} {
      allow read, write, update, delete, list: if request.auth != null;
    }
  }
}
